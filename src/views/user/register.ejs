<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: 'register' , fileCss: 'register' })%>

    <body>
        <%-include('../partials/header')%>

            <main>

                <h3 class="titulo-page">Registrarse.</h3>
                <h3 class="titulo-page">¡Completá el formulario!</h3>

                <form method="post" class="form-register" action="/usuario/register">

                    <div class="nombre">
                        <label for="nombre">Nombre</label>
                        <input 
                            type="text" 
                            name="nombre" 
                            id="nombre"
                            value= "<%= locals.oldData ? oldData.nombre : null %>"
                        >
                        <% if(locals.errors && errors.nombre){ %>
                            <div class="texto-errorValidacion maxWidth">
                                <%= errors.nombre.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="apellido">
                        <label for="apellido">Apellido</label>
                        <input 
                            type="text" 
                            name="apellido" 
                            id="apellido"
                            value= "<%= locals.oldData ? oldData.apellido : null %>"
                        >
                        <% if(locals.errors && errors.apellido){ %>
                            <div class="texto-errorValidacion maxWidth">
                                <%= errors.apellido.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="correo">
                        <label for="correo">Correo Electrónico</label>
                        <input 
                            type="email" 
                                name="correo" 
                                id="correo"
                                value= "<%= locals.oldData ? oldData.correo : null %>"
                            >
                        <% if(locals.errors && errors.correo){ %>
                            <div class="texto-errorValidacion maxWidth">
                                <%= errors.correo.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="password">
                        <label for="password">Contraseña</label>
                        <input 
                        type="password" name="password" id="password">
                        <% if(locals.errors && errors.password){ %>
                            <div class="texto-errorValidacion maxWidth">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>
                                        
                    <div class="confirmarPassword">
                        <label for="confirmarPassword">Confirmar Contraseña</label>
                        <input type="password" name="confirmarPassword" id="confirmarPassword">
                        <% if(locals.errors && errors.confirmarPassword){ %>
                            <div class="texto-errorValidacion maxWidth">
                                <%= errors.confirmarPassword.msg %>
                            </div>
                        <% } %>
                    </div>
                    <br>
                    <button type="submit">Confirmar</button>
                </form>

                <h3><a href="/usuario/login">¿Ya tenés cuenta? Inicia Sesión.</a></h3>
            </main>

            <%-include('../partials/footer')%>
    </body>

</html>